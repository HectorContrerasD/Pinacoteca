@model Pinacoteca.Areas.Admin.Models.AdminAgregarCuadrosViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "LayoutAdmin";
}
<form method="post" action="~/Admin/Cuadro/Agregar" enctype="multipart/form-data">
    <div>
        <h1>Agregar Cuadro</h1>

        <label>Título del cuadro:</label>
        <input type="text" id="txtTitulo" asp-for="Cuadros.TituloCuadro"/>

        <label>Pintor:</label>
        <select id="cmbPintor"
                asp-for="Cuadros.IdPintor" asp-items="@(new SelectList(Model.Pintor, "Id", "Nombre"))">
            <option>-- Seleccionar Pintor--</option>
        </select>

        <label>Fecha de pintado:</label>
        <input type="text" id="txtFecha" asp-for="Cuadros.FechaPintado"/>

        <label>Técnica:</label>
        <input type="text" id="txtTecnica" asp-for="Cuadros.Tecnica"/>

        <label>Dimensiones:</label>
        <input type="text" id="txtDimensiones" asp-for="Cuadros.Dimensiones"/>

        <label>Colección:</label>
        <select id="cmbColeccion" asp-for="Cuadros.IdColeccion" asp-items="@(new SelectList(Model.Coleccion, "Id", "Nombre"))">
            <option>-- Seleccionar la Coleccion--</option>
        </select>

        <label>Descripción:</label>
        <input type="text" id="txtDescripcion" asp-for="Cuadros.Descripcion"/>

        <label>Imagen:</label>
        <input type="file" id="fileUpload1" accept="image/jpeg"  asp-for="Imagen"/>

        <img id="imagePreview" src="~/Cuadros/no-disponible.png" />

        <div class="botones">
            <p id="error">@Html.ValidationSummary(true)</p>
            <input type="submit" value="Agregar" id="btnAgregar" />
            <a href="~/Admin/Cuadro">
                <input type="button" value="Cancelar" id="btnCancelar" />
            </a>
        </div>
    </div>
</form>
<script>
    function mostrarImagen(input) {
      if (input.files && input.files[0]) {
        var reader = new FileReader();
        reader.onload = function (e) {
          document.getElementById("imagePreview").src = e.target.result;
        };
        reader.readAsDataURL(input.files[0]);
      }
    }

    document
      .getElementById("fileUpload1")
      .addEventListener("change", function () {
        mostrarImagen(this);
      });
</script>