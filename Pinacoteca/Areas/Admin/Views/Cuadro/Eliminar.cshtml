@model Pinacoteca.Models.Entities.Cuadro
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "LayoutAdmin";
}
<form method="post" action="~/Admin/Cuadro/Eliminar">
    <div>
        <h1>Eliminar Cuadro</h1>

        <input type="hidden" asp-for="Id" />

        <p>¿Está seguro de eliminar el cuadro "@Model.TituloCuadro"?</p>

        <div class="botones">
            <p id="error">@Html.ValidationSummary(true)</p>
            <input type="submit" value="Confirmar" id="btnConfirmar" />
            <a href="~/Admin/Cuadro">
                <input type="button" value="Cancelar" id="btnCancelar" />
            </a>
        </div>
    </div>
</form>