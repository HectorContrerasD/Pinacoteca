@model Pinacoteca.Models.Entities.Pintor
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "LayoutAdmin";
}
<form method="post" action="~/Admin/Pintores/Eliminar">
    <div>
        <h1>Eliminar Cuadro</h1>

        <input type="hidden" asp-for="IdPintor" />

        <p>¿Está seguro de eliminar al pintor "Nombre"?</p>

        <div class="botones">
            <p id="error">@Html.ValidationSummary(true)</p>
            <input type="submit" value="Confirmar" id="btnConfirmar" />
            <a href="~/Admin/Pintores">
                <input type="button" value="Cancelar" id="btnCancelar" />
            </a>
        </div>
    </div>
</form>